<!-- 共通ページ -->
<!-- ユーザ詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>

  <% if @user == current_user %>
  <p><%= link_to "編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<!-- ユーザ投稿一覧 -->
<% @books.each do |book| %>
<div>

  <%= image_tag book.user.get_profile_image(100,100) %>

  <%= link_to book_path(book.id) do %>
      <p>Title</p>
  <% end %>

  <span><%= book.title %></span>

  <p>Opinion</p>
  <span><%= book.body %></span>

</div>
<% end %>