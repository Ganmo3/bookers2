<!-- 共通ページ -->
<%= render partial: 'users/side', locals: { user: current_user, book: @book } %>

<!-- 詳細ページ -->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>

      <table class="table">
        <tr>
          <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
          <%= link_to @book.user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          
           <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success btn-sm" %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm" %></td>
          <% end %>
        </tr>
      </table>
      
    </div>
  </div>
</div>