<h1>Book detail</h1>

<div>
  <%= image_tag 'default-image.jpg' %>
  <%= @book.user.name %>

  <span><%= @book.title %></span>

  <span><%= @book.body %></span>
  
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book.id) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>



</div>