<h1>Books</h1>

<% @books.each do |book| %>
<div>

  <%= image_tag book.user.get_profile_image(100,100) %>

    <%= link_to book_path(book.id) do %>
      <p>Title</p>
    <% end %>

    <span><%= book.title %></span>

  <p>Opinion</p>
  <span><%= book.body %></span>
</div>
<% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>